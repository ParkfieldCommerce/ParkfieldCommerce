<% resultHeading = caseStudy.result_heading %>
<% resultBody = caseStudy.result_body %>
<% resultStats = caseStudy.results_stat %>
<div class="CaseStudy__result__container--1 CaseStudy__gray mobile-space-padding-60">
	<div class="container m">
		<div class="row">
			<div class="large-9 medium-10 small-10">
				<h2 class="CaseStudy__result__title--1 "><%= resultHeading %></h2>
				<div class="CaseStudy__result__body--1"><%= resultBody %></div>
			</div>
		</div>
		<div class="row">
			<div class="large-9 medium-10 small-10">
				<div class="CaseStudy__rate__container--1">
					<% resultStats.each do |stat| %>
					<div class="CaseStudy__rate__container--2 large-3 medium-6 small-6">
						<p class="CaseStudy__rate__title--1"><%= stat.percentage %></p>
						<p class="CaseStudy__rate__body--1"><%= stat.label %></p>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<% if caseStudy.award_image_gallery.length > 0 %> 
		<div class="row">
			<div class="large-9 medium-10 small-10">
				<div class="CaseStudy__rate__container--3">
					<% caseStudy.award_image_gallery.each do |image| %>
					<div class="caseStudy__rate__container--2 large-3 medium-6 small-6">
						<img src="<%= image.url %>">
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>