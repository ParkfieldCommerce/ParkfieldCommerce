<% if type == 'migrationPage' %>	
	<div class="Comparison Comparison__contaiern">
		<div class="Comparison__row row">
			<div class="Comparison__left large-4"><h2><%= comparisonTitle %></h2></div>
			<div class="Comparison__center large-4"><%= image_tag platformFromImage.url %></div>
			<div class="Comparison__right large-4"><%= image_tag platformToImage.url %></div>
		</div>

		<% platformContent.each do |content| %>

			<div class="Comparison__row row">
				<div class="Comparison__left large-4 medium-4 small-4"><h4><%= content.feature %></h4></div>
					<% if content.from_platform == true || content.to_platform == true %>
						<div class="Comparison__center large-4 medium-4 small-4">
							<% if content.from_platform == true %>
								<%= image_tag dato.migration_check.check_images[0].url %> 
							<% else %> <%= image_tag dato.migration_check.check_images[1].url %>
							<% end %>
						</div>
						<div class="Comparison__right large-4 medium-4 small-4"><% if content.to_platform == true %><%= image_tag dato.migration_check.check_images[0].url %> <% else %> <%= image_tag dato.migration_check.check_images[1].url %>  <% end %></div>
					<% else %>
						<div class="Comparison__center large-4 medium-4 small-4"><%= content.from_platform_text %></div>
						<div class="Comparison__center large-4 medium-4 small-4"><%= content.to_platform_text %></div>

					<% end %>
			</div>

		<% end %>
	</div>
<%end %>