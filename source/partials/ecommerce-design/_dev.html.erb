<% dev = dato.design_dev_dev %>
<div class="space-150 space-bottom-300">
  <div class="eDev__container container m">
    <div class="eDev__left-section">
      <h2 class="eDev__heading">
        <%= dev.heading %>
      </h2>
      <p class="eDev__body">
        <%= dev.body %>
      </p>
      <a href="/contact" class="Link--underline">Let's talk</a>
    </div>
    <div class="eDev__right-section">
      <div class="eDev__person eDev__person--1">
        <div class="eDev__person__info">
          <div class="eDev__person__name">
            <%= dev.person.alt %>
          </div>
          <div class="eDev__person__title">
            <%= dev.person.title %>
          </div>
        </div>
        <%= image_tag dev.person.url, alt: dev.person.alt, class:"eDev__person__image"%>
      </div>
      <div class="eDev__person eDev__person--2">
        <div class="eDev__person__info">
          <div class="eDev__person__name">
            <%= dev.person_2.alt %>
          </div>
          <div class="eDev__person__title">
            <%= dev.person_2.title %>
          </div>
        </div>
        <%= image_tag dev.person_2.url, alt: dev.person_2.alt, class:"eDev__person__image"%>
      </div>
      <%= image_tag dev.image.url, alt: dev.image.alt %>
    </div>
  </div>
</div>