<% firstArticle = dato.articles.first %>
<% secondArticle = dato.articles[1] %>
<% if secondArticle.image != nil %>
	<% secondArticleImage = secondArticle.image %>
<% end %>

<% if dato.homepage_blog_section.image != nil %>
<% firstImage = dato.homepage_blog_section.image %>
<% end %>
<div class="BlogGrid space-150 mobile-space-60">
	<div class="BlogGrid__container BlogGrid__container--1">
		<div class="BlogGrid__item--1">
      <div class="BlogGrid__item__date--1">
        <p><%= firstArticle.date.strftime('%-m/%-d/%Y') %></p>
      </div>
			<div class="BlogGrid__item__heading BlogGrid__item__heading--1">
				<h3><%= link_to dato.homepage_blog_section.article_1_title, "/articles/#{firstArticle.handle}" %></h3>		
			</div>
			<div class="BlogGrid__item__author--1">
				<p>By <%= firstArticle.author %></p>
			</div>
			<a href="/articles/<%= firstArticle.handle%>"  class="BlogGrid__item__link--1 Link--underline">Read more</a>
		</div>      
	</div>


	<div class="BlogGrid__container BlogGrid__container--2">
		<div class="BlogGrid__container BlogGrid__container--3">
			 <img src='<%= firstImage.url %>' alt="<%= firstImage.alt %>">
		</div>
		<div class="BlogGrid__container BlogGrid__container--4">
			<div class="BlogGrid__item BlogGrid__item--3" style="background-image: url('<%= dato.homepage_blog_section.article_2_image.url %>')">		
				<div class="BlogGrid__item BlogGrid__item--4">
          <div class="BlogGrid__item__date--2">
            <p><%= secondArticle.date.strftime('%-m/%-d/%Y') %></p>
          </div>
					<div class="BlogGrid__item__heading BlogGrid__item__heading--2">
						<h3><%= link_to dato.homepage_blog_section.article_2_title, "/articles/#{secondArticle.handle}" %></h3>
					</div>
					<div class="BlogGrid__item__author--2">
						<p>By <%= secondArticle.author %></p>
					</div>
				</div>
			</div>
			<div class="BlogGrid__item BlogGrid__item--5">
				<div class="BlogGrid__item__twitterFeed">
					<p>We are proud to announce the launch of our newest client store @TheHourShop They offer a fantastic range of vintage designer barware and glassware via their @Shopify store...</p>
				</div>
			</div>	
		</div>
	</div>
</div>