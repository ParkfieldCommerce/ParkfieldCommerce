<% dato.marketing_page.marketing_sections.each_with_index do | section, index |%>
	<div class="padding-120 mobile-space-padding-60 mobile-space-padding-bottom-60 <% if section.alt_background == true %>background-gray<% end %>">
    <div class="container m">
		<div class="MarketingSection">
			<div class="MarketingSection__text">
				<h2><%= section.heading %></h2>
				<%= section.body %>
			</div>	
			<div class="MarketingSection__imageWrap">
				<%= image_tag section.image.url, alt: section.image.alt, class:"MarketingSection__image" %>
			</div>
		</div>
    </div>
	</div>
<% end %>