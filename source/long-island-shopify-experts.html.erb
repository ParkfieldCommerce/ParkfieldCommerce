<% content_for(:head) do %>
  <%= dato_meta_tags(dato.li_shopify_expert) %>
<% end %>

<%= partial './partials/global/hero', 
  locals:{
    type:'homewareTextiles',
    mobile_image: dato.li_shopify_expert.banner_gallery[0],
    med_image: dato.li_shopify_expert.banner_gallery[1],
    large_image: dato.li_shopify_expert.banner_gallery[2],
    heading: dato.li_shopify_expert.banner_heading,
    subHeading: dato.li_shopify_expert.banner_subheading,
    subHeadingImage: dato.li_shopify_expert.banner_subheading_image
  } 
%>
<div class="LIExperts__logos center space-90 space-bottom-120 mobile-space-30 mobile-space-bottom-30">
<% dato.li_shopify_expert.website_logos.each do |logo | %>
  <%= image_tag logo.url, class:"LIExperts__website-logos" %>
<% end %>
</div>

<div class="container m">
  <div class="space-120 space-bottom-120 mobile-space-30 mobile-space-bottom-30">
  <%= partial './partials/global/title-and-text',
    locals: {
      heading: dato.li_shopify_expert.description_heading,
      body: dato.li_shopify_expert.description_body,
      modifier: '--li-experts'
    }
   %>
   </div>
</div>
<div class="container m">
<% dato.li_shopify_experts_companies.first(3).each do |company| %>
<%= partial '/partials/homeware-textiles/homeware-case-study',locals: { company: company} %>
<% end %>
</div>
<%= partial './partials/global/consultationBanner' %>
<%= partial './partials/global/contact-popup', 
  locals: {
    heading: 'Get a free quote'
  } 
%>
<script type="text/javascript">
  $(document).ready(function(){
    $('#ContactFormButton, .Btn--whatis').click(function(){
      $('.ContactPopUp').fadeIn();
    });
    $('#CloseContactPopUp').click(function(){
      $('.ContactPopUp').fadeOut();
    });

    $('input[type="text"],input[type="email"],input[type="url"],textarea').on('change', function(){
      if ($(this).val().length > 1) {
        $(this).addClass('input-focus');
      }
      if ($(this).val().length == 0) {
        $(this).removeClass('input-focus');
      }
    });

    $('#select,.chevron').click(function(){
      $('.ContactPopUp__dropdown').toggleClass('active');
    });

    $('.dataSelector').click(function(){
      var value = $(this).attr('data-value');
      $('#select').val(value);
      $('#select').trigger('change');
      $('#Field7').val(value);
      $('.ContactPopUp__dropdown').removeClass('active');
    });

    $('#saveForm').click(function(e){
      var name = $('#Field4').val();
      var email = $('#Field9').val();
      var emailTest = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      var nameTest = /^[A-Za-z\s]+$/;

      if (!nameTest.test(name)){
        e.preventDefault();
        $('#Field4').css('border-bottom', '1px solid red');
        $('label[for="Field4"]').css("color", "red");
      }
      if (!emailTest.test(String(email).toLowerCase())){
        e.preventDefault();
        $('#Field9').css('border-bottom', '1px solid red');
        $('label[for="Field9"]').css("color", "red");
      }
    });

  });
</script>

